<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:background="@color/fragment_color"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_background"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_ava" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="120dip"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/Status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="250dip"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_marginTop="45dp"
                    android:isIndicator="true"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dip"
                    android:id="@+id/ratingBar"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
<!--                <androidx.cardview.widget.CardView-->
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <HorizontalScrollView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:fillViewport="true"
                        tools:context=".EditEntry" >
                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="1"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="2"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="3"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="3"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="3"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="3"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="10dip"
                                    android:layout_marginEnd="10dip"
                                    app:cardBackgroundColor="#22C32E"
                                    android:layout_column="3"
                                    app:cardCornerRadius="20dp">
                                    <TextView
                                        android:id="@+id/Sports6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dip"
                                        android:layout_marginEnd="10dip"
                                        android:textAppearance="@style/profile_small"/>
                                </androidx.cardview.widget.CardView>
                            </TableRow>
                        </TableLayout>
                    </HorizontalScrollView>
<!--                </androidx.cardview.widget.CardView>-->
            </LinearLayout>
<!--            <Button-->
<!--                android:layout_marginHorizontal="60dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:text="edit"-->
<!--                android:id="@+id/button"/>-->
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_background"
            android:orientation="vertical">
            <TextView
                android:text="Workout Statistics"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/WorkoutTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:layout_marginBottom="5dip"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/WorkoutTime0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/SeekBar0"
                android:layout_width="fill_parent"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:longClickable="false"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/WorkoutTime1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/SeekBar1"
                android:layout_width="fill_parent"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:longClickable="false"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/WorkoutTime2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dip"
                android:layout_marginEnd="10dip"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <SeekBar
                android:id="@+id/SeekBar2"
                android:layout_width="fill_parent"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:longClickable="false"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Sign out"
                android:background="#22C32E"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:id="@+id/button2"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
